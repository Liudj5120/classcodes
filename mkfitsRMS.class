! 制作rms的fits文件
! &1 -- .sum文件保存路径，生成文件保存在该路径下
! &2 -- .sum文件名，生成文件将用rms_&2命名
! &3, &4 -- 为基线拟合范围
! &5, &6 -- 为信号范围

set unit v
set angle min

let map%beam 54
let map%cell 30
file in &1\&2.sum
sic dele &1\&2.sig
file out &1\&2.sig s
find /range -10 10 -10 10
for i 1 to found
	get n
	set mod x &3 &4
	set win &5 &6
	resample 300 150 0 &7 v!将16384 个通道压缩成300 个，150 为中心通道，0 为中心通道的速度，2 为每2km/s 合并为一个通道
	base 1
	let ry 'sigma'
	write
next
file in &1\&2.sig
find
sic dele &1\bb_rms.*
table &1\bb_rms new /math tpeak(0) !生成tab 表，并将谱线峰值强度放入表里
xy_map &1\bb_rms 
sic dele &1\rms_&2&7.fits
vector\fits &1\rms_&2&7.fits from &1\bb_rms.lmv /bits -32
sic dele &1\&2.sig
sic dele &1\bb_rms.*
sic dele &1\bb.*