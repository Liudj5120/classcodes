! C18O
set unit v
set align v

file in &1\&2.rgd
sic delete &1\c18o.bas
file out &1\c18o.bas s !创建一个存放基线拟合数据的文件
find /all
for i 1 to found
	get next 
	modify frequency 109782.173 !C18O 的静止频率
	modify line C18O(1-0)
	set mode x -200 200 !设基线拟合的范围
	set window -100 100 !设定谱线辐射范围
	base 1 ! 基线拟合
	if sigma.LT.1.5
		write
	endif
next
set angle min !设置坐标单位为角分
set weight sigma !设置加权方式为sigma加权
file in &1\c18o.bas
sic delete &1\c18o.sum
file out &1\c18o.sum s
for i -10 to 10 by 0.5
	for j -10 to 10 by 0.5
	find /offset i j !找到偏离中心位置相同的谱线
		if found.GT.0 !此判据是以防found出错
			average !谱线求平均
			let telescope "DLH14m" !为结果数据添加望远镜名称
			write
		endif
	next
next
say C18O ok!